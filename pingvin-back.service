[Unit]
Description=Pingvin Backend
After=network.target
StartLimitIntervalSec=30
StartLimitBurst=5

[Service]
Type=simple
User=pingvin
Restart=always
RestartSec=5s
LimitNOFILE=524288

WorkingDirectory=/var/www/pingvin_source/backend
ExecStart=/usr/bin/npm -- run prod

[Install]
WantedBy=multi-user.target
